        $href .= '/';
        $href .= ($this->onlyWholesale) ? 'wholesale' : 'all';
        $href .= '/1/';
    }
?>
    <div class="col-4">
        <div class="card bg-light m-3">
            <div class="card-header">
                <a href="<?= $this->escape($href) ?>" title="<?= $this->escape($group->name) ?>"><?= $this->escape($group->name) ?></a>
