<script type="text/javascript">

    function changeQuantity(price_id, quantity){
        $.ajax({
            type: "POST",
            url: "/ajax/changequantity/",
            data:{
                price_id: price_id,
                quantity: quantity
            }
        }).done(function(){
            window.location="/shoppingcart/";     
        });
    };


    function deleteFromCart(price_id){
        $.ajax({
            type: "POST",
            url: '/ajax/deletefromcart',
            data: {
                price_id: price_id
            }
        }).done(function(){
            window.location = "/shoppingcart";
        });
    };

</script>
