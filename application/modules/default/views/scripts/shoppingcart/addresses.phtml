<script type="text/javascript">
    $(document).ready(function() {
        $('#cashierLink').click(function(e){
            e.preventDefault();
            $.ajax({
                dataType : "json",
                type : "POST",
                url : "/shoppingcart/ajaxcheckaddresses/"
            }).done(function(ret){
                if(!ret.suc){
                    $('#noAddressError').html('<?= $this->translate('shoppingcart_noaddresses_error') ?>');
                    return false;
                }
                else{
                    $('#noAddressError').html('');
                    window.location = e.currentTarget.href;
                    return true;
                }
            });
            
        });
        $('#addressTable').dataTable({
            "scrollX": true,
            "aoColumns": [
                null,
                null,
                null,
                null,
                null,
                null,
                null,
                null, 
                null,
                null,
                { "bSortable": false } 
            ],
            "oLanguage": {
                "sProcessing": "Bitte warten...",
                "sLengthMenu": "_MENU_ Einträge anzeigen",
                "sZeroRecords": "Keine Einträge vorhanden.",
                "sInfo": "_START_ bis _END_ von _TOTAL_ Einträgen",
                "sInfoEmpty": "0 bis 0 von 0 Einträgen",
                "sInfoFiltered": "(gefiltert von _MAX_  Einträgen)",
                "sInfoPostFix": "",
                "sSearch": "Suchen",
                "sUrl": "",
                "oPaginate": {
                    "sFirst":    "Erster",
                    "sPrevious": "Zurück",
                    "sNext":     "Nächster",
                    "sLast":     "Letzter"
                }
            }
        });
    });

    function choose_diff_address(){
        $('#address_select').show();
    }

    function setAddress(type, addressId){
        $.ajax({
            type: "POST",
            url: "/shoppingcart/ajaxsetaddress/",
            dataType: 'json',
            data:{
                type: type,
                id: addressId
            },
        }).done(function(ret){
            if(ret.suc){
                switch(type){
                    case 'delivery':
                        $('#choosenDeliveryAddressData').html(ret.address);
                        break;
                    case 'billing':
                        $('#choosenBillingAddressData').html(ret.address);
                        break;
                    case 'selfcollect':
                        $('#choosenDeliveryAddressData').html(ret.address);
                        break;
                }
            }               
        });
    };
               
</script>
